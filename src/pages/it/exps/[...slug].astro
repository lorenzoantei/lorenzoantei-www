---
import ExpLayout from '../../../layouts/ExpLayout.astro';

import { type CollectionEntry, getCollection, render } from 'astro:content';

export async function getStaticPaths() {
	const exps = await getCollection('expsItList');
	return exps.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'expsItList'>;

const post = Astro.props;
const { Content } = await render(post);


import Footer from '../../../components/Footer.astro';

const activePage='exp';

---

<ExpLayout {activePage} {...post.data} >
	<Content />
</ExpLayout>

<div class="bg-white mt-32">
    <Footer mode="focusexp" />
</div>
