---
export interface Props {
  src: string;
  alt: string;
  containerClass?: string;
}

const { 
    src, 
    alt, 
    containerClass = "mb-3 w-full md:max-w-[1000px] mx-auto" 
} = Astro.props;
---

<div class={containerClass}>
    <img src={src} alt={alt} class="w-full h-auto object-contain" />
</div>
